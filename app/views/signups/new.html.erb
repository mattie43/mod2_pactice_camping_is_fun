<h3>New signup form:</h3>

<% if @signup.errors.any? %>
<ul>
    <% @signup.errors.full_messages.each do |error| %>
        <li><%= error %></li>
    <% end %>
</ul>
<% end %>

<%= form_for @signup do |f| %>

<%= f.label :camper_id %>
<%= f.collection_select :camper_id, Camper.all, :id, :name %>

<%= f.label :activity_id %>
<%= f.collection_select :activity_id, Activity.all, :id, :name %>

<%= f.label :time %>
<%= f.number_field :time %>

<%= f.submit %>
<% end %>