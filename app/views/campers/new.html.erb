<h3>New camper form:</h3>

<% if flash[:my_errors] %>
<ul>
    <% flash[:my_errors].each do |error| %>
        <li><%= error %></li>
    <% end %>
</ul>
<% end %>

<%= form_for @camper do |f| %>

<%= f.label :name %>
<%= f.text_field :name %><br>

<%= f.label :age %>
<%= f.number_field :age %><br>

<%= f.submit %>
<% end %>